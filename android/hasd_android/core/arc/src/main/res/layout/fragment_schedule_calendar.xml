<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_arrow_left"
                    android:drawablePadding="8dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="22dp"
                    android:text="@string/button_back"
                    android:textAllCaps="true"
                    android:textColor="@color/primary"
                    android:textSize="14dp"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:includeFontPadding="false" />

                <TextView
                    android:id="@+id/textViewHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingTop="22dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="22dp"
                    android:text="@string/button_help"
                    android:textAllCaps="true"
                    android:textColor="@color/primary"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textSize="26dp"
                tools:text="This is a header" />

            <TextView
                android:id="@+id/textViewSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="32dp"
                android:paddingTop="19dp"
                android:paddingRight="32dp"
                android:textSize="18dp"
                android:visibility="gone"
                tools:text="This is a subheader"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/linearLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                    <TextView
                        android:id="@+id/sundayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_sun"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/mondayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_mon"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tuesdayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_tues"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/wednesdayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_weds"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/thursdayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_thurs"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/fridayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_fri"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/saturdayHeader"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/day_abbrev_sat"
                        android:textSize="26dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/lineFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/linearLayout"
                    android:background="#003245"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <FrameLayout
                        android:id="@+id/sunday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/sunday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="3"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/monday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/monday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="4"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/tuesday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tuesday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="5"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/wednesday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/wednesday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="6"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/thursday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/thursday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="7"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/friday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/friday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="8"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/saturday1_left"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/saturday1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="9"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/saturday1_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sunday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="10"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/sunday2_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/monday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="11"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/monday2_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tuesday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="12"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/tuesday2_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/wednesday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="13"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/wednesday2_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/thursday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="14"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/thursday2_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/friday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="15"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                    <FrameLayout
                        android:id="@+id/friday2_right"
                        android:layout_width="3dp"
                        android:layout_height="60dp"
                        android:background="@color/primary"
                        android:visibility="gone">

                    </FrameLayout>

                    <TextView
                        android:id="@+id/saturday2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:text="16"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/grey" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.healthymedium.arc.ui.Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/button_next" />

    <TextView
        android:id="@+id/textViewScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_rating_scroll_indicator"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/popup_scroll"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone" />

</RelativeLayout>
